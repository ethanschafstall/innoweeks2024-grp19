<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeelingsApp.FeelingsSite"
             Title="FeelingsSite"
             BackgroundColor="#242c3c" 
>
    <VerticalStackLayout>

        <Grid BackgroundColor="Black" HeightRequest="75" >
            <Label Text="Feelings" FontSize="24" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
        </Grid>

        <CollectionView x:Name="FeelingListView" ItemsSource="{Binding Feelings}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical" Padding="10">
                        <BoxView Color="{Binding Color}" WidthRequest="30" HeightRequest="30" CornerRadius="15" BackgroundColor="Transparent" />
                        <Label Text="{Binding Name}"  HorizontalOptions="CenterAndExpand" Margin="10,0,0,0" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Confirmer" Clicked="OnConfirmClicked" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="20" />

    </VerticalStackLayout>
</ContentPage>